<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/nameFragment"
        android:name="com.example.neuromentor.ui.fragments.NameFragment"
        android:label="NameFragment">
        <action
            android:id="@+id/action_nameFragment_to_genderFragment"
            app:destination="@id/genderFragment" />
    </fragment>
    <fragment
        android:id="@+id/genderFragment"
        android:name="com.example.neuromentor.ui.fragments.GenderFragment"
        android:label="GenderFragment">
        <action
            android:id="@+id/action_genderFragment_to_ageFragment"
            app:destination="@id/ageFragment" />
    </fragment>
    <fragment
        android:id="@+id/ageFragment"
        android:name="com.example.neuromentor.ui.fragments.AgeFragment"
        android:label="fragment_age"
        tools:layout="@layout/fragment_age" >
        <action
            android:id="@+id/action_ageFragment_to_dialogFragment"
            app:destination="@id/dialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/dialogFragment"
        android:name="com.example.neuromentor.ui.fragments.ChatFragment"
        android:label="fragment_dialog"
        tools:layout="@layout/fragment_chat" >
        <argument
            android:name="userID"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.neuromentor.ui.fragments.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_dialogFragment"
            app:destination="@id/dialogFragment" />
        <action
            android:id="@+id/action_startFragment_to_nameFragment"
            app:destination="@id/nameFragment" />
    </fragment>
</navigation>