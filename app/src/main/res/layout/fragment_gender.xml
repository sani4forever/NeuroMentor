<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C">
    <TextView
    android:id="@+id/textView_gender_question"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ваш пол:"
    android:textColor="@android:color/white"
    android:textSize="28sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/button_male"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    android:layout_marginBottom="48dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_male"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Мужской"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:backgroundTint="#333333" app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_female"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_gender_question"
        app:layout_constraintWidth_percent="0.6"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_female"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Женский"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:backgroundTint="#333333"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_other"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_male"
        app:layout_constraintWidth_percent="0.6"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_other"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Другое..."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:backgroundTint="#333333"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_female"
        app:layout_constraintWidth_percent="0.6"
        android:layout_marginBottom="100dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>